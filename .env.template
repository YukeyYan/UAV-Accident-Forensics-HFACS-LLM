# UAV Accident Forensics System Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# OpenAI Configuration (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=asrs_data.db
CSV_DATA_PATH=your_asrs_data.csv
ENABLE_DATABASE_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# =============================================================================
# Server Configuration
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
NODE_SERVER_PORT=3000
NODE_SERVER_ADDRESS=localhost

# =============================================================================
# Analysis Configuration
# =============================================================================
MAX_SIMILAR_CASES=5
ANALYSIS_CONFIDENCE_THRESHOLD=0.6
MAX_RECORDS_PER_BATCH=1000
ENABLE_CACHE=true
CACHE_TTL_HOURS=24

# =============================================================================
# Visualization Configuration
# =============================================================================
ENABLE_3D_VISUALIZATIONS=true
ENABLE_REAL_TIME_UPDATES=true
WEBSOCKET_TIMEOUT=30
MAX_GRAPH_NODES=500

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=asrs_system.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# =============================================================================
# Performance Configuration
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
MAX_MEMORY_USAGE_MB=4096
ENABLE_MULTIPROCESSING=false
MAX_WORKERS=4

# =============================================================================
# Security Configuration
# =============================================================================
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_INPUT_VALIDATION=true
SANITIZE_USER_INPUT=true

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false
ENABLE_METRICS_COLLECTION=true

# =============================================================================
# Data Processing Configuration
# =============================================================================
DEFAULT_ENCODING=utf-8
DATE_FORMAT=%Y-%m-%d
TIME_FORMAT=%H:%M:%S
TIMEZONE=UTC

# =============================================================================
# AI Analysis Configuration
# =============================================================================
ENABLE_SMART_FORM_ASSISTANT=true
ENABLE_HFACS_ANALYSIS=true
ENABLE_TREND_ANALYSIS=true
ENABLE_SIMILARITY_SEARCH=true

# =============================================================================
# Report Generation Configuration
# =============================================================================
ENABLE_PDF_REPORTS=true
ENABLE_JSON_EXPORTS=true
REPORT_TEMPLATE_PATH=templates/
OUTPUT_DIRECTORY=reports/

# =============================================================================
# Development Configuration (for development only)
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_HOT_RELOAD=false
MOCK_OPENAI_API=false
